<div class="wrapper">
       <%= render 'msidebar' %>
        <div class="main-panel">
            <%= render 'mnav' %>
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header" data-background-color="purple">
                                    <h4 class="title">Update Menu</h4>
                                    <p class="category"></p>
                                </div>
                                <div class="card-content">
<%=form_for @menu, url: {action: "update_menu"} do |f| %>
                                    <form>
                                        <div class="row">
                                            <div class="col-md-5">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Day</label>

						    <%= f.text_field :day, class: "form-control" %>
                                                </div>
                                            </div>
                                            <div class="col-md-5">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Breakfast</label>

						    <%= f.text_field :meal1, class: "form-control" %>

                                                </div>
                                            </div>

                                        </div>
					<div class="row">
                                            <div class="col-md-5">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Lunch</label>
                                                    <%= f.text_field :meal2, class: "form-control" %>

                                                </div>
                                            </div>
					    <div class="col-md-5">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Supper</label>

						    <%= f.text_field :supper, class: "form-control" %>

                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">
                                                                          <div class="col-md-5">
                                                                              <div class="form-group label-floating">
                                                                                  <label class="control-label">Dinner</label>
                                                                                  <%= f.text_field :meal3, class: "form-control" %>

                                                                              </div>
                                                                          </div>
                                                                        </div>

                                          <%= f.submit("Update") %>


<% end %>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">

                </div>
            </footer>
        </div>
    </div>
