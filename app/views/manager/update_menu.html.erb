<div class="wrapper">
       <%= render 'msidebar' %> 
        <div class="main-panel">
            <%= render 'mnav' %> 
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header" data-background-color="purple">
                                    <h4 class="title">Update Menu</h4>
                                    <p class="category"></p>
                                </div>
                                <div class="card-content">
<%=form_for @menu, url: {action: "update_menu"} do |f| %>
                                    <form>
                                        <div class="row">
                                            <div class="col-md-5">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Day</label>
                                                    <%= f.text_field(:day) %>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Meal 1</label>
                                                    <%= f.text_field(:meal1) %>
                                                </div>
                                            </div>
                                           
                                        </div>
					<div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Meal 2</label>
                                                    <%= f.text_field(:meal2) %>
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Meal 3</label>
                                                    
						    <%= f.text_field(:meal3) %>
                                                </div>
                                            </div>
                                            
                                        </div>
                                       
                                          <%= f.submit("Update") %>


<% end %>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                   
                </div>
            </footer>
        </div>
    </div>
